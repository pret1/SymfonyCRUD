{% extends 'base.html.twig' %}

{% block title %}Hello MainController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
{#    <button class="btn btn-primary" href="{{ path('add_author') }}"><a>Add+</a></button>#}
{#    <button class="btn btn-primary"><a href="{{ path('add_author') }}">Add+</a></button>#}
    <a type="button" class="btn btn-primary" href="{{ path('add_author') }}">Add+</a>
    <table class="table">
        <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Genre</th>
            <th scope="col">Age</th>
            <th scope="col">Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for author in authors %}
        <tr>
            <th scope="row">{{ author.id }}</th>
            <td>{{ author.name }}</td>
            <td>{{ author.genre }}</td>
            <td>{{ author.age }}</td>
            <td>
                <a type="button" class="btn btn-secondary" href="{{ path('show_author', {'id': author.id}) }}">Show</a>
                <a type="button" class="btn btn-warning" href="{{ path('edit_author', {'id': author.id}) }}">Edit</a>
                <a type="button" class="btn btn-danger" href="{{ path('delete_author', {'id': author.id}) }}">Delete</a>
            </td>
        </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
